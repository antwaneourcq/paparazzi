<!DOCTYPE module SYSTEM "module.dtd">

<module name="bme280" dir="sensors">
  <doc>
    <description>
      Bosch-Sensortech BME280 pressure-temperature-humidity sensor
    </description>
    <configure name="BME280_I2C_DEV" value="i2cX" description="select which i2c peripheral to use (default i2c2)"/>
    <define name="BME280_SLAVE_ADDR" value="BME280_I2C_ADDR|BME280_I2C_ADDR_ALT" description="i2c slave address (default BME280_I2C_ADDR)"/>
    <!-- <define name="BME280_SYNC_SEND" description="flag to transmit the data as it is acquired"/>-->
  </doc>
  <header>
    <file name="bme280.h"/>
  </header>
  <init fun="bme280_init()"/>
  <periodic fun="bme280_periodic()" freq="2"/>
  <event fun="bme280_event()"/>
  <makefile target="ap">
    <configure name="BME280_I2C_DEV" default="i2c2" case="upper|lower"/>
    <define name="USE_$(BME280_I2C_DEV_UPPER)"/>
    <define name="BME280_I2C_DEV" value="$(BME280_I2C_DEV_LOWER)"/>
    <file name="bme280.c"/>
    <file name="bme280_i2c_spi.c" dir="peripherals"/>
  </makefile>
</module>
