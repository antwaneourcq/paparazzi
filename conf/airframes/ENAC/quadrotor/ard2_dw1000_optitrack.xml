<!DOCTYPE airframe SYSTEM "../../airframe.dtd">

<airframe name="ardrone2_DW1000_optitrack">
  <description>
    Generic ARDrone2 airframe with DW1000 positionning
    and with Optitrack as GPS backup
    HOST is given by AC_ID
  </description>

  <firmware name="rotorcraft">
    <configure name="PREFIX" value="/opt/arm-2012.03/bin/arm-none-linux-gnueabi"/>
    <configure name="HOST" value="192.168.1.$(AC_ID)"/>

    <define name="DEBUG_VFF_EXTENDED"/>
    <target name="ap" board="ardrone2">
      <configure name="USE_MAGNETOMETER" value="FALSE"/>
      <define name="AHRS_USE_GPS_HEADING" value="TRUE"/>
      <define name="USE_SONAR"/>
      <define name="USE_BARO_MEDIAN_FILTER"/>
      <define name="AUTOPILOT_DISABLE_AHRS_KILL"/>
      <module name="radio_control" type="datalink"/>
    </target>

    <target name="nps" board="pc">
      <module name="fdm" type="jsbsim"/>
      <module name="radio_control" type="ppm"/>
    </target>

    <module name="telemetry" type="transparent_udp"/>
    <!-- Subsystem section -->
    <module name="motor_mixing"/>
    <module name="actuators" type="ardrone2"/>
    <module name="imu" type="ardrone2"/>
    <module name="gps" type="datalink">
      <configure name="SECONDARY_GPS" value="datalink"/>
    </module>
    <module name="dw1000_arduino">
      <configure name="DW1000_USE_AS_GPS" value="TRUE"/>
      <configure name="DW1000_USE_AS_LOCAL_POS" value="FALSE"/>
      <configure name="DW1000_ARDUINO_UART" value="uart1"/>
    </module>
    <module name="stabilization" type="int_quat"/>
    <!-- AHRS + INS for indoor or outdoor -->
    <!--module name="ahrs" type="float_invariant"/-->
    <module name="ahrs" type="int_cmpl_quat"/>
    <module name="ins" type="hff_extended"/>
    <define name="HFF_UPDATE_GPS_SPEED" value="FALSE"/>
    <!-- INS for outdoor only -->
    <!--module name="ins" type="float_invariant"/-->

    <!--module name="gps" type="ubx_ucenter"/-->
    <module name="bat_voltage_ardrone2"/>
    <module name="air_data"/>
  </firmware>

  <!-- include common control -->
  <include href="conf/airframes/ENAC/quadrotor/ard2_base_control_optitrack.xml"/>
  <!-- include arframe calibration -->
  <include href="conf/airframes/ENAC/quadrotor/ard2_$AC_ID.xml"/>

  <!-- local magnetic field -->
  <!-- http://paparazzi.enac.fr/wiki/Subsystem/ahrs#Local_Magnetic_Field -->
  <section name="AHRS" prefix="AHRS_">
    <!-- Toulouse -->
    <define name="H_X" value="0.513081"/>
    <define name="H_Y" value="-0.00242783"/>
    <define name="H_Z" value="0.858336"/>
    <!-- Delft -->
    <!--define name="H_X" value="0.3892503"/>
    <define name="H_Y" value="0.0017972"/>
    <define name="H_Z" value="0.9211303"/ -->
  </section>

  <section name="INS" prefix="INS_">
    <!-- Toulouse -->
    <!--define name="H_X" value="0.513081"/>
    <define name="H_Y" value="-0.00242783"/>
    <define name="H_Z" value="0.858336"/-->
    <!-- Delft -->
    <!--define name="H_X" value="0.387766"/>
    <define name="H_Y" value="0.00648212"/>
    <define name="H_Z" value="0.921725"/ -->
    <!-- trust more the baro over the gps alt -->
    <define name="INV_NXZ" value="0.3"/>
    <define name="INV_NH" value="2.0"/>
  </section>

  <section name="GCS">
    <define name="ALT_SHIFT_PLUS_PLUS" value="5"/>
    <define name="ALT_SHIFT_PLUS" value="1"/>
    <define name="ALT_SHIFT_MINUS" value="-1"/>
  </section>

  <section name="DW1000" prefix="DW1000_">
    <define name="ANCHORS_IDS" value="1, 3, 4" type="int[]"/>
    <define name="ANCHORS_POS_X" value="0., 2.5, -2.5" type="float[]"/>
    <define name="ANCHORS_POS_Y" value="5., 0., 0." type="float[]"/>
    <define name="ANCHORS_POS_Z" value="0., 0., 0." type="float[]"/>
    <define name="OFFSET" value="0.64, 0.9, 0.85" type="float[]"/>
    <define name="SCALE" value="1.0, 1.0, 1.0" type="float[]"/>
  </section>

</airframe>
