<!DOCTYPE airframe SYSTEM "../../airframe.dtd">


<!-- this is a gimball-logger frame equiped with
     * Autopilot:   APOGEE V1.0
     * IMU OPTION 1:  APOGEE Board = MPU6050 (acc & gyro ) 
		   + baro  / MPL3115 
     * GPS:         Ublox M8 x 2: UART4 (INS) and UART6
     * RC:          Set to datalink, to free UART2 for telemetry (configured but not used)
-->

<!-- this is the XP3DV2 Apogee fixed wing airframe file
-->

<airframe name="mistrale_gimball">
    
  <firmware name="fixedwing">
      
    <target name="ap" board="apogee_1.0_chibios">
      <module name="radio_control" type="datalink"/>
    </target>
    <target name="nps" board="pc">
      <module name="radio_control" type="ppm"/>
      <module name="fdm"           type="jsbsim"/>
    </target>

    <module name="ahrs"      type="float_dcm"/>
    <module name="ins"       type="alt_float"/>
    <module name="telemetry" type="xbee_api"/>  


    <!-- APOGEE INTERNAL IMU OPTION (see BIS below) -->

    <!-- 1) APOGEE board IMU orientation Flat -->
    <!--   1A) USB connector Right 
	   1B) USB connector Left >
    <module name="imu" type="apogee">
      <define name="IMU_APOGEE_CHAN_X" value="0"/>      
      <define name="IMU_APOGEE_CHAN_Y" value="1"/>
    </module-->
    <!--   1C) USB connector Rear 
	   1D) USB connector Front >
    <module name="imu" type="apogee">
      <define name="IMU_APOGEE_CHAN_X" value="1"/>      
      <define name="IMU_APOGEE_CHAN_Y" value="0"/>
    </module-->
    <!-- 2) APOGEE board IMU orientation Transversal USB UP -->
    <!--   2A) Power Right --> 
    <!--   2B) Power Left --> 
    <module name="imu" type="apogee">
      <define name="IMU_APOGEE_CHAN_X" value="2"/>      
      <define name="IMU_APOGEE_CHAN_Y" value="0"/>
      <define name="IMU_APOGEE_CHAN_Z" value="1"/>      
    </module>


    <!-- APOGEE EXTERNAL IMU OPTION
	 MPU9250 board IMU orientation: component upside, connector to the rear -->
    <!--module name="imu" type="mpu9250_i2c">
      <configure name="IMU_MPU9250_I2C_DEV" value="i2c2"/>
      <define name="IMU_MPU9250_I2C_ADDR" value="MPU9250_ADDR"/>
      <define name="IMU_MPU9250_CHAN_X" value="1"/>      
      <define name="IMU_MPU9250_CHAN_Y" value="0"/>
    </module-->

    <!-- GPS UP board (default) -->
    <!-- configured to send navigation message for the INS
	               plus UBX_RXM_RAWX and UBX_RXM_SFRBX -->
    <module name="gps" type="ublox">
      <configure name="GPS_PORT" value="UART4"/>
      <configure name="GPS_BAUD" value="B115200"/>
      <define name="LOG_RAW_GPS"/>
    </module>
    <!-- GPS DOWN board  -->
    <!-- configured to send UBX_RXM_RAWX and UBX_RXM_SFRBX -->
    <module name="gpslogsd">  
      <configure name="GPSLOGSD_PORT" value="UART6"/>
      <configure name="GPSLOGSD_BAUD" value="B115200"/>
    </module>

    <module name="control" type="new"/>
    <module name="navigation"/>
    <module name="takeoff_detect"/>

    <module name="tlsf"/>
    <module name="pprzlog"/>
    <module name="logger"  type="sd_chibios"/>

    <!-- Flight recorder is used to provide GPS and attitude logs -->
    <module name="flight_recorder"/>

  </firmware>

  <!-- commands section
       choose servos connectors that are ont the same timer 
       For the Apogee V0.1 
         on Timer 2 there are servo 1, 4 and 5
         on Timer 3 there are servo 0, 2, 3 and 6
       Min, neutral and max values should be the same for all three servos. -->
   <servos>
    <servo name="MOTOR"         no="0" min="1040" neutral="1040" max="2000"/>
    <!--servo name="AILEVON_LEFT"  no="2" max="1228" neutral="1628" min="2000"/> 
    <servo name="AILEVON_RIGHT" no="3" max="1866" neutral="1466" min="1066"/--> 
    <servo name="AILEVON_LEFT"  no="2" max="1100" neutral="1550" min="1900"/> 
    <servo name="AILEVON_RIGHT" no="3" max="1900" neutral="1500" min="1100"/> 
  </servos>

  <commands>
    <axis name="THROTTLE" failsafe_value="0"/>
    <axis name="ROLL"     failsafe_value="0"/>
    <axis name="PITCH"    failsafe_value="0"/>
  </commands>

  <rc_commands>
    <set command="THROTTLE" value="@THROTTLE"/>
    <set command="ROLL"     value="@ROLL"/>
    <set command="PITCH"    value="@PITCH"/>
  </rc_commands>

  <section name="MIXER">
    <define name="AILEVON_AILERON_RATE"  value="0.75"/>
    <define name="AILEVON_ELEVATOR_RATE" value="0.75"/>
  </section>

  <command_laws>
    <let var="aileron"         value="@ROLL  * AILEVON_AILERON_RATE"/>
    <let var="elevator"        value="@PITCH * AILEVON_ELEVATOR_RATE"/>
    <set servo="MOTOR"         value="@THROTTLE"/>
    <set servo="AILEVON_LEFT"  value="$elevator - $aileron"/>
    <set servo="AILEVON_RIGHT" value="$elevator + $aileron"/>
  </command_laws>

  <section name="AUTO1" prefix="AUTO1_">
    <define name="MAX_ROLL"  value="45." unit="deg"/>
    <define name="MAX_PITCH" value="30." unit="deg"/>
  </section>

  <section name="IMU" prefix="IMU_">

    <!-- GPS board Mag orientation: "Fix" left -->

    <!-- APOGEE INTERNAL IMU OPTION BIS -->

