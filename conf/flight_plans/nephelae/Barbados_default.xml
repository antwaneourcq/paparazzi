<!DOCTYPE flight_plan SYSTEM "../flight_plan.dtd">

<flight_plan alt="100.0" ground_alt="20.0" lat0="13.300651" lon0="-59.578546" max_dist_from_home="9800" name="cove_bay" security_height="50">
